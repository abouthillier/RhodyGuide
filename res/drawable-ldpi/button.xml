<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
	    <shape android:shape="rectangle" >
			<gradient
		        android:angle="270"
		        android:startColor="#263547"
		        android:centerColor="#1c3c61"
		        android:endColor="#1b3d63"
		        android:type="linear"/>
		    
			<stroke  android:width="3dp" android:color="#1c2735" />
			<padding android:left="1dp"
		             android:top="1dp"
		             android:right="1dp"
		             android:bottom="1dp"/> 
			<corners android:radius="15dp"/>
		</shape>
    </item> <!-- pressed -->
    
    <item android:state_focused="true">
	    <shape android:shape="rectangle" >
			<gradient
		        android:angle="90"
		        android:startColor="#263547"
		        android:centerColor="#1c3c61"
		        android:endColor="#1b3d63"
		        android:type="linear"/>
		    
			<stroke  android:width="3dp" android:color="#1c2735" />
			<padding android:left="1dp"
		             android:top="1dp"
		             android:right="1dp"
		             android:bottom="1dp"/> 
			<corners android:radius="15dp"/>
		</shape>
    </item> <!-- focused -->
    
    <item>
	    <shape android:shape="rectangle" >
			<gradient
		        android:angle="90"
		        android:startColor="#263547"
		        android:centerColor="#1c3c61"
		        android:endColor="#1b3d63"
		        android:type="linear"/>
		    
			<stroke  android:width="3dp" android:color="#1c2735" />
			<padding android:left="1dp"
		             android:top="1dp"
		             android:right="1dp"
		             android:bottom="1dp"/> 
			<corners android:radius="15dp"/>
		</shape>
    </item> <!-- default -->
</selector>
