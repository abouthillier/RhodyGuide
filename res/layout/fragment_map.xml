<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity" >
    
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <RelativeLayout
        	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="#fff"
	        android:orientation="horizontal" >
	    <RelativeLayout
	        android:id="@+id/fragment_map_rel1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
		    <RadioGroup
		        android:id="@+id/rg_views"
		        android:orientation="horizontal"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
		 
		        <RadioButton
		            android:id="@+id/rb_normal"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Normal"
		            android:checked="true" />
		 
		        <RadioButton
		            android:id="@+id/rb_satellite"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Satellite" />
		 
		        <RadioButton
		            android:id="@+id/rb_terrain"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Terrain"
		            android:layout_marginRight="5dp" />
		 
		    </RadioGroup>
		</RelativeLayout>
		<RelativeLayout
		    android:id="@+id/fragment_map_rel2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="33dp"
	        android:background="#fff"
	        android:orientation="horizontal"
	        android:layout_alignTop="@+id/fragment_map_rel1" >
		    <RadioGroup
		        android:id="@+id/rg_buildings"
		        android:orientation="horizontal"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
		 
		        <RadioButton
		            android:id="@+id/rb_none"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="None"
		            android:checked="true" />
		 
		        <RadioButton
		            android:id="@+id/rb_all"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="All" />
		 
		        <RadioButton
		            android:id="@+id/rb_relevant"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Relevant"
		            android:layout_marginRight="5dp" />
		
		    </RadioGroup>
	    </RelativeLayout>
	</RelativeLayout>
    
</RelativeLayout>